<% include ../layouts/doctype.ejs %>

<div class="card bg-light mb-3 mx-auto mt-5" style="max-width: 18rem;">
    <div class="card-header">
        Ajouter une catégorie
	</div>
	<div class="card-body">
        <form action="create" method="POST">
            <div class="form-group">
                <label for="nom-categorie">Nom de la categorie :</label>
				<input type="text" class="form-control" name="nom_categorie" id="nom-categorie" />
			</div>
			<div class="form-group">
                <label for="active-categorie">Statut :</label>
				<select name="active_categorie" class="form-control" id="active-categorie">
                    <option value="0">Inactif</option>
					<option value="1">Actif</option>
				</select>
			</div>
            
            <div class="card-footer bg-transparent border-success justify-content-center d-flex">
                <button type="submit" class="btn btn-success">Créer</button>
            </div>
		</form>
	</div>
</div>

<% include ../layouts/doctype_end.ejs %>